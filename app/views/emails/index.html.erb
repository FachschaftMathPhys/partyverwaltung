<div class="row">
  <div class="small-12 medium-3 column">
    <%= render "util_bar" %>
  </div>
  <div class="small-12 medium-10 column">
    <div class="row">  
      <% @mails.each do |m| %>
        <%= link_to m do %>
          <div class="small-12 column">
            <%= fa_icon "envelope 5x" %>
            <p>
              <%= m.name %>
            </p>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
