\large

\rowcolors{2}{gray!25}{white}
\renewcommand{\arraystretch}{1.2}

<% @data.each do |d,s| %>
  \begin{center}
    \Large\bfseries
    <%= d %>
  \end{center}
  
  \begin{center}
    \begin{longtable}{L{2cm}|L{2cm}|C{4cm}|C{6cm}|C{7cm}|C{2cm}|C{1.5cm}}
      \rowcolor{gray!50}
      Start & Ende & Vorname & Nachname & E-Mail & Shirt- Größe & {\small schon geholfen}\\
      <% s.each do |ss| %>
        <%= ss[0] %> & <%= ss[1] %> & <%= ss[2] %> & <%= ss[3] %>& <% if ss[2] != "" %>XXXXXXXXXX<% end %> & <%= ss[4] %> & <%= ss[5] %>\\
      <% end %>
    \end{longtable}
  \end{center}
<% end %>
