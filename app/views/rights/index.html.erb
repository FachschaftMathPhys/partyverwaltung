<div class="row">
  <div class="small-12 medium-1 column">
    <%= render "util_bar" %>
  </div>
  
  <div class="small-12 medium-8 column">
    <div class="row">
      <div class="small-12 medium-8 medium-offset-2 end column">
        <% @alle.each do |a| %>
          <div class="row">
            <div class="small-5 column RnameCol">
              <%= a.nick %> 
            </div>
            <div class="small-5 column RstarCol">
              <% if canUse("RightsController","change") %>
                <div class="button-group">
                  <% for i in 1..3 do %>
                    <% if i == a.level %>
                      <%= link_to rights_change_path(:r => a, :v => i), :class=>"success button" do %>
                        <% for kk in 1..i %> <%= fa_icon "star" %> <% end %>
                      <% end %>
                    <% else %>
                      <%= link_to rights_change_path(:r => a, :v => i), :class=>"button" do %>
                        <% for kk in 1..i %> <%= fa_icon "star-o" %> <% end %>
                      <% end %>
                    <% end %>
                  <% end %>
                </div>
              <% else %>
                <% for i in 1..a.level do %>
                  <%= fa_icon "star-o 2x", :style=>"color:black" %>
                <% end %>
              <% end %>
            </div>
            <div class="small-2 column">
              <% if canUse("RightsController","destroy") %>
                <%= link_to fa_icon("trash 2x"), a, :data => {:confirm => "Sure?"}, :method => :delete %>
              <% else %>
                &nbsp;
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="small-12 medium-3 column">
    Warnings
  </div>
</div>
